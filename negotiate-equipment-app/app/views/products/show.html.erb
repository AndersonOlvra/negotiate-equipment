<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Products</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></div>
      <div class="breadcrumb-item"><%= link_to 'Products', products_path %></div>
      <div class="breadcrumb-item">Show Product</div>
    </div>
  </div>

  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4>Show Product</h4>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-3">Name:</dt>
          <dd class="col-sm-9"><%= @product.name %></dd>
          <dt class="col-sm-3">Description:</dt>
          <dd class="col-sm-9"><%= @product.description %></dd>
          <dt class="col-sm-3">Price:</dt>
          <dd class="col-sm-9"><%= np(@product.price) %></dd>
          <dt class="col-sm-3">User:</dt>
          <dd class="col-sm-9"><%= @product.user %></dd>
        </dl>
      </div>
    </div>
  </div>
</section>

<%= link_to icon('fas fa-edit', 'Edit'), edit_product_path(@product), class: 'btn btn btn-icon icon-left btn-warning' %>
<%= link_to icon('fas fa-arrow-left', 'Back'), products_path, class: 'btn btn-icon icon-left btn-secondary d-mobile-none' %>

<% content_for(:page_title, 'Show Product') %>
