
<section class="section">
    <%= form_tag user_change_equipment_path(chosen_user: @chosen_user) do %>
        <div class="section-header d-mobile-none">
            <h1>Users</h1>
            <div class="section-header-breadcrumb">
            <div class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></div>
            <div class="breadcrumb-item"><%= link_to 'Users', users_path %></div>
            <div class="breadcrumb-item">Show User</div>
            </div>
        </div>

        <div style="float: left; width: 47%">
            <div class="section-body">
                <div class="card">
                <div class="card-header">
                    <h4>Show User</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                    <dt class="col-sm-3">Name:</dt>
                    <dd class="col-sm-9"><%= @user.name %></dd>
                    <dt class="col-sm-3">Nickname:</dt>
                    <dd class="col-sm-9"><%= @user.nickname %></dd>
                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9"><%= @user.email %></dd>
                    <dt class="col-sm-3">Birthdate:</dt>
                    <dd class="col-sm-9"><%= @user.birthdate.strftime("%d/%m/%Y") %></dd>
                    <dt class="col-sm-3">Country:</dt>
                    <dd class="col-sm-9"><%= @user.country %></dd>
                    </dl>
                </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-md">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Select</th>
                    </tr>
                </thead>
                <tbody data-target="infinite-page.container">
                    <% @user.products.each do |product| %>
                    <tr data-target="infinite-page.item">
                        <td><%= product.name %></td>
                        <td><%= np(product.price) %></td>
                        <td><%= check_box_tag :"user_equipment[#{product.id}]" %></td>
                    </tr>
                    <% end %>
                </tbody>
                </table>
            </div>

            <%= submit_tag 'Change Equipments', class: 'btn btn btn-icon icon-left btn-info' %>
            <%= link_to icon('fas fa-arrow-left', 'Back'), users_path, class: 'btn btn-icon icon-left btn-secondary d-mobile-none' %>
        </div>

        <div style="float: right; width: 50%">
            <div class="section-body">
            <div class="card">
                <div class="card-header">
                <h4>Show User</h4>
                </div>
                <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Name:</dt>
                    <dd class="col-sm-9"><%= @chosen_user.name %></dd>
                    <dt class="col-sm-3">Nickname:</dt>
                    <dd class="col-sm-9"><%= @chosen_user.nickname %></dd>
                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9"><%= @chosen_user.email %></dd>
                    <dt class="col-sm-3">Birthdate:</dt>
                    <dd class="col-sm-9"><%= @chosen_user.birthdate.strftime("%d/%m/%Y") %></dd>
                    <dt class="col-sm-3">Country:</dt>
                    <dd class="col-sm-9"><%= @chosen_user.country %></dd>
                </dl>
                </div>
            </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-md">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Select</th>
                        </tr>
                    </thead>
                    <tbody data-target="infinite-page.container">
                        <% @chosen_user.products.each do |product| %>
                            <tr data-target="infinite-page.item">
                                <td><%= product.name %></td>
                                <td><%= np(product.price) %></td>
                                <td><%= check_box_tag :"chosen_user_equipment[#{product.id}]" %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    <% end %>
</section>

<% content_for(:page_title, 'Show User') %>
