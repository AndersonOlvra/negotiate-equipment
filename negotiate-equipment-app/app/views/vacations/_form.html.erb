<%= form_with(model: vacation, data: { controller: 'validation' }) do |form| %>
  <div class="form-group">
    <%= form.label :start_date %>
    <%= form.text_field :start_date, value: vacation.start_date, placeholder: "yyyy-mm-dd", class: 'form-control', data: { controller: 'date' } %>
  </div>
  <div class="form-group">
    <%= form.label :end_date %>
    <%= form.text_field :end_date, value: vacation.end_date, placeholder: "yyyy-mm-dd", class: 'form-control', data: { controller: 'date' } %>
  </div>
  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.collection_select(:user_id, User.all, :id, :to_s, {}, { class: 'form-control', data: { controller: 'select' } }) %>
  </div>
  <div class="card-footer pl-0">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
