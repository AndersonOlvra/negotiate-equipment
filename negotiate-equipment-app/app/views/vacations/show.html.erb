<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Vacations</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></div>
      <div class="breadcrumb-item"><%= link_to 'Vacations', vacations_path %></div>
      <div class="breadcrumb-item">Show Vacation</div>
    </div>
  </div>

  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4>Show Vacation</h4>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-3">Start date:</dt>
          <dd class="col-sm-9"><%= @vacation.start_date.strftime("%d/%m/%Y") %></dd>
          <dt class="col-sm-3">End date:</dt>
          <dd class="col-sm-9"><%= @vacation.end_date.strftime("%d/%m/%Y") %></dd>
          <dt class="col-sm-3">User:</dt>
          <dd class="col-sm-9"><%= @vacation.user %></dd>
        </dl>
      </div>
    </div>
  </div>
</section>

<%= link_to icon('fas fa-edit', 'Edit'), edit_vacation_path(@vacation), class: 'btn btn btn-icon icon-left btn-warning' %>
<%= link_to icon('fas fa-arrow-left', 'Back'), vacations_path, class: 'btn btn-icon icon-left btn-secondary d-mobile-none' %>

<% content_for(:page_title, 'Show Vacation') %>
